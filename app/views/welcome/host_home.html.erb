<body class="home" >
<section class="welcome">
<h3><span>Host: </span><span style="font-family:cursive"><%="#{current_user.name.titleize}"%></span></h3>
</section>
<div class="whole-page">
<div class="card" style="width: 18rem;">
<section class="home">
<% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, :class =>"card-img-top" %>
    <%else %>
    <%=image_tag url_for("cat.jpg"), :class =>"card-img-top"%>
<%end%>
</section>
</div>

<div class="upcoming-stays">
<h2>Your Upcoming Stays:</h2>
    <ul>
    <% if current_user.host_upcoming_stays.count > 0 %>
    <% current_user.host_upcoming_stays.each do |stay| %>
    <li><%=link_to stay, property_path(Property.find_by(title: stay)) %></li>
    <%end%>
    <%else%>
    <%= "You have no upcoming Stays. Make sure to add your property, so Nomads can book Stays! "%>
    <%end%>
    </ul>

<button class="btn btn-info"><%= link_to "Add a New Property", new_property_path, :class=>"link2" %></button>
</div>
<div class="past-stays">
<h2>View/Edit Your Properties:</h2>
    <ul>
        <% current_user.properties.each do |p| %>
        <li><%= link_to p.title, property_path(p) %><br>
            <%= "Avg. Rating: #{p.average_rating}" %></li>
        <%end%>
    </ul>
</div>

</div>

