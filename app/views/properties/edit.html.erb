<h1>Edit Property Listing</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<%end%>

<% if @property.host == current_user %>
    <%= form_for(@property) do |f| %>
            <%= f.label "Title: " %><br>
        <%= f.text_field :title %><br>
        <%= f.label "Address: " %><br>
        <%= f.text_field :address %><br>
        <%= f.label "City: " %><br>
        <%= f.collection_select :city_id, City.all, :id, :name %><br>
        <%= f.hidden_field :host_id, :value => current_user.id %><br>
        <%= f.label "Description: " %><br>
        <%= f.text_area :description %><br>
        <button><%=link_to "Delete Property", property_path(@property), method: :delete, data:{ confirm: 'Are you certain you want to delete this?' } %></button>
        <%= f.submit %>
    <%end%>
<%end%>