<h1>Edit Property Listing</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<%end%>

<%= form_for(@property) do |f| %>
    <%= f.label "Title: " %>
    <%= f.text_field :title %><br>
    <%= f.label "Address: " %>
    <%= f.text_field :address %><br>
    <%= f.label "City: " %>
    <%= f.collection_select :city_id, City.all, :id, :name %><br>
    <%= f.label "Host: " %>
    <%= f.collection_select :host_id, User.all, :id, :name %><br>
    <%= f.label "Description: " %>
    <%= f.text_area :description %>
    <%= f.submit %>
<%end%>