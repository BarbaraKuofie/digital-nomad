<h1>Edit A Scheduled Stay</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<%end%>

<%= form_for(@stay) do |f| %>
    <%= f.label "Property: " %><br>
    <%= f.collection_select :property_id, Property.all.order(:city_id), :id, :formatted_name %><br>
    <%= f.hidden_field :nomad_id, :value => current_user.id %>
    <%= f.label "Check-In: " %><br>
    <%= f.date_field(:checkin, min: Date.today) %><br>
    <%= f.label "Check-Out: " %><br>
    <%= f.date_field(:checkout, min: Date.today) %><br>
    <%= f.submit %><br><br>
    <button><%=link_to "Cancel Stay", stay_path(@stay), method: :delete, data:{ confirm: 'Are you certain you want to cancel this stay?' } %></button>
<%end%>