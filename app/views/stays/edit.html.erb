<h1>Edit A Scheduled Stay</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<%end%>

<% if @stay.nomad == current_user %>
    <%= form_for(@stay) do |f| %>
        <%= f.label "Property: " %><br>
        <%= f.collection_select :property_id, Property.all, :id, :title %><br>
        <%= f.hidden_field :nomad_id, :value => current_user.id %>
        <%= f.label "Check-In: " %><br>
        <%= f.date_field(:checkin, min: Date.today) %><br>
        <%= f.label "Check-Out: " %><br>
        <%= f.date_field(:checkout, min: Date.today) %><br>
        <%= f.submit %>
    <%end%>
<%end%>