<div class="top-page">
<%= video_tag( 'kayaking.mp4', id: 'background', autoplay: true, loop: true, muted: true )%>
</div>
<div class="form">
<h1 class ="title">Edit Your Stay</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<%end%>
<div>
<%= form_for(@stay) do |f| %>

    <%= f.label "Property: " %><br>
    <%= f.collection_select :property_id, Property.all.order(:city_id), :id, :formatted_name %><br>
    <%= f.hidden_field :nomad_id, :value => current_user.id %>
    <%= f.label "Check-In: " %><br>
    <%= f.date_field(:checkin, min: Date.today) %><br>
    <%= f.label "Check-Out: " %><br>
    <%= f.date_field(:checkout, min: Date.today) %><br><br/>
    <%= button_tag(type: 'submit', class: "btn btn-outline-secondary") do %>
        Update Stay
        <% end %>
<%end%>
</div>
</div>

